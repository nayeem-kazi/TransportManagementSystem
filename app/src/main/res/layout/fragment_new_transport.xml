<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newTransportFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewTransportFragment"
    android:padding="20dp"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="New Transport"
                />

            <EditText
                android:id="@+id/transportId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Transport ID"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:id="@+id/transportType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Transport Type"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:id="@+id/transportNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Transport No"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                >

                <Button
                    android:id="@+id/transportInfoSubmitButton"
                    android:backgroundTint="@color/purple_700"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:text="SUBMIT" />

                <Button
                    android:id="@+id/transportInfoClearClear"
                    android:backgroundTint="@color/purple_700"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:text="CLEAR" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>